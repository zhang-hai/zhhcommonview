<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ImageTextView">
        <attr name="drawableLeft" format="reference"/>
        <attr name="drawableTop" format="reference"/>
        <attr name="drawableRight" format="reference"/>
        <attr name="drawableBottom" format="reference"/>
        <attr name="drawableWidth" format="dimension"/>
        <attr name="drawableHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="RoundTextView">
        <attr name="corner" format="dimension"/><!--圆角尺寸-->
        <attr name="solid_color" format="color"/><!--正常状态背景填充色-->
        <attr name="stroke_width" format="dimension"/><!--正常状态边框粗细-->
        <attr name="stroke_color" format="color"/><!--正常状态的边框颜色-->
        <attr name="press_solid_color" format="color"/><!--按下时的背景填充颜色-->
        <attr name="press_stroke_color" format="color"/><!--按下时的背景边框颜色-->
        <attr name="press_text_color" format="color"/> <!--按下时的字体颜色-->
        <attr name="select_text_color" format="color"/> <!--选中时的字体颜色-->
        <attr name="select_stroke_color" format="color"/> <!--选中时的边框颜色-->
        <attr name="select_solid_color" format="color"/> <!--选中时的背景填充颜色-->
    </declare-styleable>

    <!--雷达半径，不包括边缘文字-->
    <attr name="radius" format="dimension"/>
    <declare-styleable name="RadarChartView">
        <!--雷达半径，不包括边缘文字-->
        <attr name="radius"/>
        <!--背景线条颜色-->
        <attr name="backgroundLineColor" format="color"/>
        <!--指标文字大小-->
        <attr name="edgeTextSize" format="dimension"/>
        <!--指标文字颜色-->
        <attr name="edgeTextColor" format="color"/>
        <!--区域颜色-->
        <attr name="areaColor" format="color"/>
        <!--折线颜色-->
        <attr name="lineColor" format="color"/>
    </declare-styleable>

    <!--柱状图自定义属性-->
    <declare-styleable name="BarChartView">
        <!--柱状图宽度-->
        <attr name="perBarWidth" format="dimension"/>
        <!--每组内部柱状图之间的间距-->
        <attr name="groupPerBarSpace" format="dimension"/>
        <!--横线线条颜色-->
        <attr name="yAxisLineColor" format="color"/>
        <!--X轴标签文字颜色-->
        <attr name="xLabelColor" format="color"/>
        <!--X轴标签文字大小-->
        <attr name="xLabelTextSize" format="dimension"/>
        <!--Y轴标签文字颜色-->
        <attr name="yLabelColor" format="color"/>
        <!--Y轴标签文字大小-->
        <attr name="yLabelTextSize" format="dimension"/>
        <!--柱状图的图例文字颜色-->
        <attr name="legendLabelColor" format="color"/>
        <!--柱状图的图例文字大小-->
        <attr name="legendLabelTextSize" format="dimension"/>
        <!--柱状图的图例icon宽度-->
        <attr name="legendIconWidth" format="dimension"/>
        <attr name="legendIconShape">
            <!--value值只能是int类型的  所以获取时通过typeArray.getInt获取-->
            <!--正方形-->
            <enum name="square" value="1"/>
            <!--圆形-->
            <enum name="circle" value="2"/>
        </attr>
    </declare-styleable>
</resources>